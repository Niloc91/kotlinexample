
FROM openjdk:8-jre-alpine


EXPOSE 8080

ENV JAVA_SERVICE_SOURCE_JAR build/libs/kotlinexample*.jar
ENV JAVA_SERVICE_RUN_JAR kotlinexample.jar
ENV JAVA_SERVICE_RUN_WORKDIR /opt/kotlin

CMD java -jar $JAVA_SERVICE_RUN_JAR
WORKDIR $JAVA_SERVICE_RUN_WORKDIR/


#COPY $JAVA_SERVICE_SOURCE_JAR $JAVA_SERVICE_RUN_WORKDIR/$JAVA_SERVICE_RUN_JAR

COPY --from=example-builder $JAVA_SERVICE_SOURCE_JAR $JAVA_SERVICE_RUN_WORKDIR/$JAVA_SERVICE_RUN_JAR

